<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="actionModeBackground">@color/intro_bg</item>
    </style>

    <style name="FullScreenTheme.Base" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FullScreenTheme" parent="FullScreenTheme.Base"/>

    <style name="FullScreenTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ColouredButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/color_accent</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <!-- Dark Buttons -->
    <style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/grey_500</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TranslucentButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/translucent_white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
    </style>
</resources>
