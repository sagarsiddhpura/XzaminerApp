<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="12dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/que_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:paddingBottom="4dp"
        >

        <ImageView
            android:id="@+id/question_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_question"
            android:src="@drawable/ic_question"
            android:layout_marginTop="12dp"
            app:layout_constraintRight_toLeftOf="@+id/question_text"
            app:layout_constraintTop_toTopOf="@+id/question_text"/>

        <com.simplemobiletools.commons.views.MyTextView
            android:id="@+id/question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            tools:text="The decisions and actions of an IS auditor are MOST likely to affect which of the following types of risk?"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/divider_question_options"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dimens_16dp"
            android:layout_marginLeft="@dimen/dimens_16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/dimens_16dp"
            android:layout_marginRight="@dimen/dimens_16dp"
            android:background="@color/divider_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question_text"/>

        <com.simplemobiletools.commons.views.MyTextView
            android:id="@+id/option_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            tools:text="Ensure the risk assessement is aligned to management's risk assessement process"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_question_options"/>

        <com.simplemobiletools.commons.views.MyTextView
            android:id="@+id/option_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            tools:text="Detection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/option_1"/>

        <com.simplemobiletools.commons.views.MyTextView
            android:id="@+id/option_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            tools:text="Control"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/option_2"/>

        <com.simplemobiletools.commons.views.MyTextView
            android:id="@+id/option_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            tools:text="Business"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/option_3"/>

        <ImageView
            android:id="@+id/option_1_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_check"
            android:padding="4dp"
            android:layout_marginTop="2dp"
            app:layout_constraintRight_toLeftOf="@+id/option_1"
            app:layout_constraintTop_toTopOf="@+id/option_1"/>

        <ImageView
            android:id="@+id/option_2_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_check"
            app:layout_constraintRight_toLeftOf="@+id/option_2"
            app:layout_constraintTop_toTopOf="@+id/option_2"/>

        <ImageView
            android:id="@+id/option_3_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_check"
            app:layout_constraintRight_toLeftOf="@+id/option_3"
            app:layout_constraintTop_toTopOf="@+id/option_3"/>

        <ImageView
            android:id="@+id/option_4_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_check"
            app:layout_constraintRight_toLeftOf="@+id/option_4"
            app:layout_constraintTop_toTopOf="@+id/option_4"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
