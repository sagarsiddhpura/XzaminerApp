<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout

    android:id="@+id/dialog_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin"
    android:paddingTop="@dimen/activity_margin">

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">

        <EditText
                android:id="@+id/question_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Question Text"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">

        <EditText
                android:id="@+id/question_option_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 1 Text"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">

        <EditText
                android:id="@+id/question_option_1_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 1 Explanation"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">

        <EditText
                android:id="@+id/question_option_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 2 Text"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">

        <EditText
                android:id="@+id/question_option_2_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 2 Explanation"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">

        <EditText
                android:id="@+id/question_option_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 3 Text"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">

        <EditText
                android:id="@+id/question_option_3_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 3 Explanation"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">

        <EditText
                android:id="@+id/question_option_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Option 4 Text"/>

        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp">

            <EditText
                    android:id="@+id/question_option_4_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Option 4 Explanation"/>

        </android.support.design.widget.TextInputLayout>

    </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</ScrollView>

